{
  "name": "mcp-chatgpt",
  "version": "1.0.0",
  "description": "TypeScript MCP server with Express integration",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc && node scripts/build-ts-resources.mjs && pnpm run build:css",
    "build:ts-resources": "node scripts/build-ts-resources.mjs",
    "build:css": "pnpm exec tailwindcss -i src/styles/tailwind.css -o dist/assets/tailwind.css --minify",
    "watch:ts-resources": "node scripts/watch-ts-resources.mjs",
    "watch:css": "pnpm exec tailwindcss -i src/styles/tailwind.css -o dist/assets/tailwind.css -w",
    "dev": "concurrently -k -n server,bundles,css -c blue,magenta,green \"pnpm:dev:server\" \"pnpm:watch:ts-resources\" \"pnpm:watch:css\"",
    "dev:server": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx}'",
    "format:check": "prettier --check 'src/**/*.{ts,tsx}'",
    "clean": "rm -rf dist",
    "prepare": "pnpm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "typescript",
    "express"
  ],
  "author": "george@directbooker.com",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "cors": "^2.8.5",
    "embla-carousel-react": "^8.6.0",
    "express": "^4.18.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@tailwindcss/cli": "^4.1.14",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "esbuild": "^0.25.11",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "postcss": "^8.5.6",
    "prettier": "^3.3.0",
    "tailwindcss": "^4.1.14",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
